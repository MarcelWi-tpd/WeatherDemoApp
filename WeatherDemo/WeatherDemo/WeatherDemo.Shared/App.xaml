<Application
    x:Class="WeatherDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:WeatherDemo.Converters"
    xmlns:viewModels="using:WeatherDemo.ViewModels">
    
    <Application.Resources>
        <viewModels:MainViewModel x:Key="MainViewModel" />

        <Style x:Key="BackgroundImageGridWP" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/Background/803.jpg"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity">
                <Setter.Value>0.4</Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackgroundImageGridWindows" TargetType="Grid">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush Stretch="UniformToFill" ImageSource="ms-appx:///Assets/Background/803.jpg"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity">
                <Setter.Value>0.4</Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
